/* ---------------------------------------------------
   TABS
--------------------------------------------------- */
QTabWidget::pane {
    border: 2px solid white;
    border-radius: 8px;
}

QTabBar::tab {
    background-color: rgba(0, 0, 0, 0.1);
    border: 1px solid black;
    border-radius: 6px;
    margin: 2px;
    padding: 8px 12px;
    min-width: 150px;
    font-weight: bold;
    color: #ffffff;
    font-family: "Comic Sans MS", cursive;
}

QTabBar::tab:selected {
    background-color: #7a3b8f;
    color: #5a0040;
    font-weight: bold;
}

QTabBar::tab:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

/* ---------------------------------------------------
   TABLES
--------------------------------------------------- */
QTableWidget {
    background-color: #d4b7dc;
    color: white;
    font-family: "Comic Sans MS", cursive;
    gridline-color: white;
    border: 2px solid white;
    border-radius: 6px;
}

/* ---------------------------------------------------
   TOOLTIP
--------------------------------------------------- */
QToolTip {
    background-color: #f5cde6;
    color: #3e0031;
    border: 1px solid #ffb3e0;
    font-family: "Comic Sans MS", cursive;
    font-size: 12px;
}

/* ---------------------------------------------------
   SCROLLBARS
--------------------------------------------------- */
QScrollBar:vertical, QScrollBar:horizontal {
    background: #c39ac9;
    border: 1px solid white;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #ff5aa9;
    border-radius: 6px;
}

QScrollArea {
    background-color: transparent;
    border: none;
}

QScrollArea QWidget {
    background-color: transparent;
}

/* ---------------------------------------------------
   ALTERNATE FORM CARDS
--------------------------------------------------- */
QWidget#alternateFormCard {
    background-color: #2a2a2a;
    border: 1px solid #3a3a3a;
    border-radius: 4px;
    padding: 8px;
    margin: 4px;
}

QWidget#alternateFormCard:hover {
    background-color: #3a3a3a;
    border-color: #4a4a4a;
}

/* ---------------------------------------------------
   ATTRIBUTE CARDS
--------------------------------------------------- */
QWidget#attributeCard {
    background-color: #2a2a2a;
    border: 1px solid #3a3a3a;
    border-radius: 4px;
    padding: 8px;
    margin: 4px;
}

QWidget#attributeCard:hover {
    background-color: #3a3a3a;
    border-color: #4a4a4a;
}

/* ---------------------------------------------------
   DEFECT CARDS
--------------------------------------------------- */
QWidget#defectCard {
    background-color: #2a2a2a;
    border: 1px solid #3a3a3a;
    border-radius: 4px;
    padding: 8px;
    margin: 4px;
}

QWidget#defectCard:hover {
    background-color: #3a3a3a;
    border-color: #4a4a4a;
}

/* ---------------------------------------------------
   MISC CUSTOM WIDGETS
--------------------------------------------------- */
#spentCpDisplay, #unspentCpDisplay {
    font-weight: bold;
}

#unspentCpDisplay[negative="true"] {
    color: red;
    font-weight: bold;
}

#unspentCpDisplay[negative="false"] {
    color: #ffffff;
}

/* ---------------------------------------------------
   REMOVE BUTTON
--------------------------------------------------- */
QPushButton#removeButton {
    background-color: #ff4444;
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: bold;
    padding: 4px;
    margin: 4px;
    min-width: 24px;
    min-height: 24px;
    text-align: center;
}

QPushButton#removeButton:hover {
    background-color: #ff6666;
}

/* ---------------------------------------------------
   EDIT BUTTON
--------------------------------------------------- */
QPushButton#editButton {
    background-color: #5acdff;
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 14px;
    font-weight: bold;
    padding: 4px 8px;
    margin: 4px;
    text-align: center;
}

QPushButton#editButton:hover {
    background-color: #7ae5ff;
}
