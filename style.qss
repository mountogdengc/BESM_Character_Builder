/* ---------------------------------------------------
   BASE WIDGET STYLES
--------------------------------------------------- */
QMainWindow, QDialog {
    background-color: #a383ab;
}

QWidget#qt_tabwidget_stackedwidget {
    background-color: #d4b7dc;
}

/* ---------------------------------------------------
   LABELS & TEXT
--------------------------------------------------- */
QLabel {
    color: #ffffff;
    font-family: "Comic Sans MS", cursive;
    font-size: 14px;
    padding: 2px;
    font-weight: bold;
}

#cardTitle {
    font-weight: bold;
    font-size: 10pt;
    color: #ffffff;
    font-family: "Comic Sans MS", cursive;
    padding: 2px 4px 1px 4px;
}

#suggestionLabel {
    color: #ff5aa9;
    font-family: "Comic Sans MS", cursive;
    font-size: 16px;
    font-weight: bold;
    padding: 5px;
    margin: 5px;
    border-radius: 5px;
}

#suggestionLabel:hover {
    text-decoration: underline;
}

.cardLabel {
    color: #ffffff;
    font-family: "Comic Sans MS", cursive;
    font-size: 10pt;
    padding: 2px 4px;
}

/* ---------------------------------------------------
   BUTTONS
--------------------------------------------------- */
QPushButton, QToolButton {
    background-color: rgba(255, 255, 255, 0.05);
    color: #ffddee;
    font-family: "Comic Sans MS", cursive;
    font-size: 18px;
    font-weight: bold;
    border: 1px solid black;
    padding: 6px 10px;
    border-radius: 4px;
    text-align: left;
}

QPushButton:hover, QToolButton::menu-indicator {
    background-color: rgba(255, 255, 255, 0.2);
}

QDialogButtonBox {
    background-color: rgba(255, 255, 255, 0.05);
    color: #ffddee;
    font-family: "Comic Sans MS", cursive;
    font-size: 16px;
    font-weight: bold;
    border: 1px solid black;
    border-radius: 4px;
    padding: 6px 10px;
}

/* ---------------------------------------------------
   INPUT FIELDS
--------------------------------------------------- */
QLineEdit, QTextEdit, QSpinBox, QComboBox {
    background-color: #d4b7dc;
    border: 2px solid white;
    border-radius: 6px;
    padding: 4px;
    color: #ffffff;
    font-size: 14px;
    font-family: "Comic Sans MS", cursive;
}

